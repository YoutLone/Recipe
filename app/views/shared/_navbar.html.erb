<header class="p-3 bg-success">
  <div class="container">
    <div class="flex items-center justify-between">
      <h3 class="text-white text-lg font-bold mt-2">Recipe App</h3>
      <ul class="flex space-x-4">
        <li class="nav-item">
          <%= link_to "Add New Foods", foods_path, class: "nav-link text-white" %>
        </li>
        <li class="nav-item">
          <%= link_to 'List of Recipes', new_recipes_path, class: "nav-link text-white" %>
        </li>
        <%= link_to 'Public Recipes', public_recipes_path, class: "nav-link text-white"
 %>

        <li class="nav-item">
          <%= link_to "Shopping List", shopping_list_path, class: "nav-link text-white" %>
        </li>
      </ul>
      <div class="flex items-center space-x-4">
        <% if user_signed_in? %>
          <%= button_to 'Logout', destroy_user_session_path, method: :delete, data: { turbo: false }, class: "btn btn-warning mt-2" %>
        <% else %>
          <%= link_to 'Login', new_user_session_path, class: "btn btn-outline-light me-2" %>
          <%= link_to 'Sign-up', new_user_registration_path, class: "btn btn-warning" %>
        <% end %>
      </div>
    </div>
  </div>
</header>
