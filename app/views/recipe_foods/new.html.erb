<div class="container mt-4">
  <div class="card p-4 mb-4 shadow">
    <h3 class="mb-4 text-xl font-medium text-gray-900">Add Ingredient</h3>
    <%= form_with model: RecipeFood, data: { turbo: false }, url: user_new_recipe_recipe_foods_path(current_user, @recipe), class: "row g-3" do |f| %>
      <%= f.hidden_field :new_recipe_id, value: @recipe.id %>
        <div class="mb-3">
        <%= f.label :food_id, "Food", class: "form-label" %>
        <%= f.select :food_id, current_user.foods.map { |food| [food.name, food.id] }, {}, class: "form-select" %>
      </div>
      <div class="mb-3">
      <%= f.label :quantity, "Quantity", class: "form-label ms-3" %>
      <%= f.number_field :quantity, class: "form-control mb-3" %>
      </div>
      <div class="text-center">
      <%= f.submit "Add ingredient", class: "btn btn-success w-100 mb-2" %>
      </div>
    <% end %>
  </div>
</div>
