<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <h2 class="text-center mb-4">Add New Recipe</h2>
      <%= form_with model: @recipe, url: user_new_recipes_path(current_user), method: :post do |f|  %>
        <div class="mb-3">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, autofocus: true, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :description, class: "form-label" %>
          <%= f.text_field :description, autofocus: true, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :preparation_time, class: "form-label" %>
          <%= f.number_field :preparation_time, step: 0.1, autofocus: true, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :cooking_time, class: "form-label" %>
          <%= f.number_field :cooking_time, step: 0.1, autofocus: true, class: "form-control" %>
        </div>
        <div class="mb-3 form-check">
          <%= f.check_box :public, class: "form-check-input" %>
          <%= f.label :public, class: "form-check-label" %>
        </div>
        <div class="d-flex justify-content-between">
          <%= f.submit "Save", class: "btn btn-primary" %>
          <%= link_to 'Back', url_for(:back), class: "btn btn-danger" %>
        </div>
      <% end %>
    </div>
  </div>
  <% if flash[:notice] %>
    <div class="alert alert-success mt-3"><%= flash[:notice] %></div>
  <% end %>
</div>
